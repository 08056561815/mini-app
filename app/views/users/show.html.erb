<div class="contents row" >
<% @tweets.each do |tweet| %>
  <div class="row">
  <div class="col">
    <div class="card">
      <div class="card-content">
        <p><%= simple_format(tweet.text) %></p>
      </div>
      <div class="card-action">
        <% if user_signed_in? && current_user.id == tweet.user_id %>
        <%= link_to 'EDIT', "/tweets/#{tweet.id}/edit", method: :get, class: "waves-effect waves-light btn" %>
        <% end %>
        <% if user_signed_in? && current_user.id == tweet.user_id %>
          <%= link_to 'DESTROY', "/tweets/#{tweet.id}", method: :delete, class: "waves-effect waves-light btn" %>
        <% end %>

      </div>
    </div>
  </div>
  </div>
<% end %>
</div>
