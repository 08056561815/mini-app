<%= form_for [@tweets] do |f| %>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :本文 %>
          <%= f.text_area :text, class: "materialize-textarea" %>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit "送信", class: "btn btn-primary withripple" %>

<% end %>
